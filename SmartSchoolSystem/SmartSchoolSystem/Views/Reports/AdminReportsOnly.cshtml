    <script>
        $(document).ready(function () {
            $("#Classlist").change(function () {
                $.get("/Reports/UpdateSubjects", { classname: $("#Classlist").find(":selected").text() }, function (data) {
                    $("#subjectList").empty();
                    $.each(data, function (index, row) {
                        $("#subjectList").append("<option>" + row + "</option>")
                    });
                });
            })
        });
        $(document).ready(function () {
            $("#Classlist1").change(function () {
                $.get("/Reports/UpdateStudents", { classname: $("#Classlist1").find(":selected").text() }, function (data) {
                    $("#studentList").empty();
                    $.each(data, function (index, row) {
                        $("#studentList").append("<option>" + row + "</option>")
                    });
                });
            })
        });
    </script>
