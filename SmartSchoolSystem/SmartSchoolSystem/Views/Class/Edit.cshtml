@model SmartSchoolSystem.Models.ClassesViewModels
@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="padding-top:40px;">
        <div style="position:relative; width: 40%; height: 300px; border: 1px solid; margin: auto;padding-top:20px; padding-left: 00px; border-radius: 10px; box-shadow: 5px 10px 50px; background-color: #F9F9F9;">

            <div class="form-horizontal">
                <h4 style="position: relative; left: 38%;">Update Class</h4>
                <br />
                <div style="padding-left:20px;">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="padding-left:20px;">
                            <input type="submit" value="Save" class="btn btn-default" style="background-color:black; border-color:black; color:white;" />
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
        
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
