                    </button>
                    <a class="navbar-brand" href="Index.html"><img src="~/img/logo.png" alt="logo" />Smart School System</a>
                </div>
                <div class="navbar-collapse collapse ">
                    <ul class="nav navbar-nav">
                        <li class="elements">
                            @Html.ActionLink("Home Page", "Index" ,"Home", null, null)
                        </li>
                      

                        <li class="elements">
                            @Html.ActionLink("Contact Us", "Contact", "Home", new { @class = "elements" }, null)
                        </li>
                        <li class="elements">
                            @Html.ActionLink("About", "About", "Home", new { @class = "elements" },null)
