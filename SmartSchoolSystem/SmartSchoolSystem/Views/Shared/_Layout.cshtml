@if (HelperClass.account == "Admin")
{
                    <li style="color:gray;">@Html.ActionLink("Event Page", "Index", "Events")</li>
                    <li class="elements">@Html.ActionLink("Attendance", "AddAttendance", "Attendance")</li>
