@model IEnumerable<SmartSchoolSystem.Models.RegistrationRequests>

@{
    ViewBag.Title = "ApproveRegistrationRequests";
}

<h2 style="text-align:center;padding-bottom:30px;">Approve Registration Requests</h2>

<div class="text-center" style="border: 5px solid #000000; border-radius: 5px; padding: 10px; width: 80%; height: auto; margin: auto;">

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.designation)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                
                <td>
                    @*@Html.DisplayFor(modelItem => item.status)*@
                    <button type="submit">@Html.ActionLink("Approve", "ApproveRegistrationRequests", new { id = item.id })</button>
                
                    @*@Html.DisplayFor(modelItem => item.status)*@
                    <button type="submit">@Html.ActionLink("Decline", "ApproveRegistrationRequests", new { id = item.id })</button>
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.id })
                    </td>*@
            </tr>
        }
    </table>
    </div>