@model IEnumerable<SmartSchoolSystem.Models.SubjectViewModel>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center;">Subjects</h2>

<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
if (HelperClass.account == "Admin")
{
    <div style="align-self:center; text-align:center;padding-bottom:30px;">
        <a class="btn btn-primary" style="background-color:black; border-color:black; align-self:center" href=@Url.Action("Create", "Subject")>Create and Add New Subject</a>
    </div>
}

<div style="padding-left:300px;">
    <label>Class: </label> &nbsp;
    <select id="Classlist" name="Classlist">
        @foreach (var o in ViewBag.Options)
        {
            <option value="@o.ToString()">@o.ToString()</option>
        }
    </select>

</div>
<div style="align-self:center; text-align:center;padding-bottom:30px;">
    <input type="submit" style="background-color:black; border-color:black; align-self:center; color:white;" value="Fetch Subjects of Selected Class" class="btn btn-default"/>
</div>
<h3 style="text-align:center; text-decoration:underline; font-family:'Times New Roman';">@ViewBag.Classname</h3>
foreach (var item in Model)
{
    <div class="text-center" style="border: 5px solid #000000; border-radius: 5px; padding: 10px; width: 80%; height: auto; margin: auto;">
        <span class="icons c3"><i class="fa fa-trophy"></i></span>
        <div class="box-area">
            <h4>Subject Name</h4>
            <p>@item.name</p>

            <br />
            @if (HelperClass.account == "Admin")
                {
                <div>
                    <a class="btn btn-primary" style="background-color:black; border-color:black; align-self:center" href=@Url.Action("Edit", "Subject", new { id = item.id })>Update</a>

                    <a class="btn btn-primary" style="background-color:black; border-color:black; align-self:center" href=@Url.Action("Delete", "Subject", new { id = item.id })>Delete</a>
                </div>
            }
        </div>
    </div>
    <br />
}

}